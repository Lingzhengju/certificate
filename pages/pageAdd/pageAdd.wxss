.content{
  margin-top: auto;
}
/* 表格 */
.table {
  border: 2px solid darkgray;
  width: 100%;
  margin-top: 1rem;
  margin-right: 1rem;
  margin-left: 1rem;
  width: auto; 
   
 }
 .tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
 }
 .td {
   width:20%;
   justify-content: center;
   display: flex;
   text-align: center;
   border-right: 2px solid #ddd;
   height: 100%;
 }
 .td-1 {
   width:19%;
   justify-content: center;
   display: flex;
   text-align: center;
   border-right: 2px solid #ddd;
   height: 100%;
 }
 .td-2 {
   width:80%;
   justify-content: center;
   border-right: 2px solid #ddd;
   text-align: left;
   height: 100%;
   max-width: 100%;
   padding: 40rpx 0;
 }
 .bg-w{
  background: #afb4db;
   
 }
 .bg-g{
  background: #E6F3F9;
 }
 .bg-g2{
  background: #fff;
 }
 .th {
  width: 19%;
  justify-content: center;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
  border-right: 2px solid #ddd;
 }
 .th-2 {
  width: 80%;
  justify-content: center;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
  max-height: 3rem;
  max-width: 80%;
 }.th-text {
  width: 80%;
  justify-content: center;
  color: #000;
  display: block;
  height: 3rem;
  align-items: center;
  max-height: 3rem;
  max-width: 80%;
 }
 /* 按钮 */
 .submit {
  width: 80%;
  margin-top: 20rpx;
  background-color: burlywood;
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.submit::after {
  border-radius: 98rpx;
  border: 0; 
}
