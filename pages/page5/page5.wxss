.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: rgb(0, 59, 15);
  font-weight: bold;
}

.usermotto {
  margin-top: 30px;
}

.background {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  text-align: center;
  background: #f5f5f5;
}
.button-area{
  margin: 0 auto;
  width: 100%;
  color:#ffffff;
}
.form-item {
  height: 120rpx;
  border-bottom: 1rpx solid #e3e3e3;
  display: flex;
  align-items: center; 
}
